<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Minecraft Style Overrides -->
    <Style Selector="Button">
        <Setter Property="CornerRadius" Value="0" />
    </Style>
    
    <Style Selector="Border">
        <Setter Property="CornerRadius" Value="0" />
    </Style>
    
    <Style Selector="ProgressBar">
        <Setter Property="CornerRadius" Value="0" />
    </Style>
    
    <Style Selector="TextBox">
        <Setter Property="CornerRadius" Value="0" />
    </Style>
    
    <Style Selector="ComboBox">
        <Setter Property="CornerRadius" Value="0" />
    </Style>
    
    <!-- Custom Scrollbar for MC look -->
    <Style Selector="ScrollBar">
        <Setter Property="CornerRadius" Value="0" />
    </Style>
    
    <!-- NavButton specific overrides -->
    <Style Selector="Button.navbutton">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Padding" Value="14,12" />
        <Setter Property="BorderBrush" Value="#33000000" />
    </Style>

    <Style Selector="Button.navbutton:pointerover">
        <Setter Property="Background" Value="#363636" />
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePrimaryBrush}" />
    </Style>

    <!-- Generic Button (MC style) -->
    <Style Selector="Button">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="#10000000" />
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePrimaryBrush}" />
    </Style>

    <!-- Card overrides -->
    <Style Selector="Border.card">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="#484848" />
        <Setter Property="BoxShadow" Value="none" />
    </Style>

    <Style Selector="Border.glass">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Background" Value="#2A000000" />
    </Style>
</Styles>
